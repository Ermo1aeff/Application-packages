<Window x:Class="XMLAdding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMLAdding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="PlantGread" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Сорт" Binding="{Binding Path=common.common_name}" Width="10*"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Path=botanical_name}" Width="10*"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Path=price.price_name}" Width="10*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="2" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
            <Button x:Name="Add" Width="150" Content="Добавить записи" FontSize="15" Click="Add_Click"/>
            <Button x:Name="UpdateGrid" Width="150" Content="Обновить заиси" FontSize="15" Click="UpdateGrid_Click"/>
        </StackPanel>

    </Grid>

</Window>
